<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.hniu.community.dao.UserInfoDao">

    <select id="loginCheck" resultType="int">
        select count(*) from userinfo
        <where>
            <if test="email !=null and email !=''">
                and email=#{email}
            </if>
            <if test="password !=null and password !=''">
                and password=#{password}
            </if>
        </where>
    </select>

    <insert id="register" parameterType="UserInfo">
        insert userinfo(userid,
        <trim suffixOverrides=",">
            <if test="accountName !=null and accountName !=''">
                accountName,
            </if>
            <if test="email !=null and email !=''">
                email,
            </if>
            <if test="password !=null and password !=''">
                password,
            </if>
            <if test="mobile !=null and mobile !=''">
                mobile
            </if>
        </trim>
        ) values (default ,
        <trim suffixOverrides=",">
            <if test="accountName !=null and accountName !=''">
                #{accountName},
            </if>
            <if test="email !=null and email !=''">
                #{email},
            </if>
            <if test="password !=null and password !=''">
                #{password},
            </if>
            <if test="mobile !=null and mobile !=''">
                #{mobile}
            </if>
        </trim>
        )
    </insert>

    <update id="resetPassword" parameterType="UserInfo">
        update userinfo
        <set>
            <if test="password!='' and password!=null">
                password=#{password}
            </if>
        </set>
        where email=#{email}
    </update>

    <select id="findUserByEmail" parameterType="String" resultType="int">
        select count(*) from userinfo where email=#{email}
    </select>
</mapper>