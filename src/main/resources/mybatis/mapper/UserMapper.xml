<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.hniu.community.dao.UserInfoDao">

    <select id="loginCheck" resultType="int">
        select count(1) from userinfo
        <where>
            <if test="email !=null and email !=''">
                and email=#{email}
            </if>
            <if test="password !=null and password !=''">
                and password=#{password}
            </if>
        </where>
    </select>

    <insert id="register" parameterType="UserInfo">
        insert userinfo(id,
        <trim suffixOverrides=",">
            <if test="accountName !=null and accountName !=''">
                accountName,
            </if>
            <if test="email !=null and email !=''">
                email,
            </if>
            <if test="password !=null and password !=''">
                password,
            </if>
            <if test="mobile !=null and mobile !=''">
                mobile
            </if>
        </trim>
        ) values (default ,
        <trim suffixOverrides=",">
            <if test="accountName !=null and accountName !=''">
                #{accountName},
            </if>
            <if test="email !=null and email !=''">
                #{email},
            </if>
            <if test="password !=null and password !=''">
                #{password},
            </if>
            <if test="mobile !=null and mobile !=''">
                #{mobile}
            </if>
        </trim>
        )
    </insert>

    <update id="updateToken">
        update userinfo
        <set>
            <if test="token !=null and token !=''">
                token=#{token}
            </if>
        </set>
        where email=#{email}

    </update>

    <select id="getToken" parameterType="String" resultType="String">
        select email from userinfo where token=#{token}
     </select>

    <select id="getAccountName" parameterType="String" resultType="String">
        select accountName from userinfo where email=#{email}
    </select>

    <update id="resetPassword" parameterType="UserInfo">
        update userinfo
        <set>
            <if test="password!='' and password!=null">
                password=#{password}
            </if>
        </set>
        where email=#{email}
    </update>

    <select id="findUserByEmail" parameterType="String" resultType="int">
        select count(*) from userinfo where email=#{email}
    </select>


    <update id="updateMassge" parameterType="UserInfo">
        update userinfo
        <set>
            <if test="accountName!=null and accountName!=''">
                accountName=#{accountName},
            </if>
            <if test="sex!=null and sex!=''">
                sex=#{sex},
            </if>
            <if test="sginName!=null and sginName!=''">
                sginName=#{sginName},
            </if>
            <if test="icon!=null and icon!=''">
                icon=#{icon},
            </if>
            <if test="qq!=null and qq!=''">
                qq=#{qq},
            </if>
            <if test="weChat!=null and weChat!=''">
                weChat=#{weChat},
            </if>
            <if test="mobile!=null and mobile!=''">
                mobile=#{mobile},
            </if>
            <if test="github!=null and github!=''">
                github=#{github},
            </if>
            <if test="microblog!=null and microblog!=''">
                microblog=#{microblog},
            </if>
        </set>
        where email=#{email}
    </update>

    <select id="getUserConfig" parameterType="String" resultType="UserInfo">
        SELECT  u.id,u.email,u.accountName,u.sex,u.icon,u.sginName,u.qq,u.WeChat,u.mobile,u.github,u.microblog FROM userinfo u WHERE email=#{email}
    </select>

    <select id="getIdByEmail" parameterType="String" resultType="long">
        select id from userinfo where email=#{email}
    </select>
</mapper>